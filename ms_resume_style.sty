%
% Pull phone number from make arguments, or use anonymous xxx.xxx.xxxx by default
%

\directlua{

  phone = 'xxx.xxx.xxxx'

  if not (arg == nil) then

    local count = 0

    for _ in pairs(arg) do
      count = count + 1
    end

    if (count > 2) then
      phone = arg[2]
    end

  end
}


